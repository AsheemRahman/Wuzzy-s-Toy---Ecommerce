                    <script>
                        document.addEventListener('DOMContentLoaded', (event) => {
                            document.querySelectorAll('.delete-link').forEach((element) => {
                                element.addEventListener('click', function (e) {
                                    e.preventDefault();
                                    const productId = this.getAttribute('data-id');

                                    Swal.fire({
                                        title: 'Are you sure?',
                                        text: "Do you want to remove this item from the cart?",
                                        icon: 'warning',
                                        showCancelButton: true,
                                        confirmButtonColor: '#3085d6',
                                        cancelButtonColor: '#d33',
                                        confirmButtonText: 'Yes, delete it!'
                                    }).then((result) => {
                                        if (result.isConfirmed) {
                                            window.location.href = '/user/remove-item/' + productId;
                                        }
                                    });
                                });
                            });
                        });


                        async function updateCartQuantity(productId, index, isIncrement) {
                            const quantityInput = document.getElementById('quantity-count-' + index);
                            const currentQuantity = parseInt(quantityInput.value);
                            const newQuantity = isIncrement ? currentQuantity + 1 : currentQuantity - 1;

                            if (newQuantity < 1 || newQuantity > 10) {
                                Swal.fire({
                                    icon: "info",
                                    title: "Quantity must be between 1 and 10",
                                });
                                return;
                            }

                            const url = isIncrement ? `/cart/productIncrement` : `/cart/productDecrement`;
                            const response = await fetch(url, {
                                method: "POST",
                                headers: {
                                    "Content-type": "application/json"
                                },
                                body: JSON.stringify({ quantity: currentQuantity, productId })
                            });

                            if (response.ok) {
                                const data = await response.json();
                                if (data.productCount !== undefined) {
                                    quantityInput.value = data.productCount;
                                    updateSummary(data);
                                } else {
                                    Swal.fire({
                                        icon: "error",
                                        title: "Failed to update product quantity",
                                        text: data.error || "Unknown error",
                                    });
                                }
                            } else {
                                const errorData = await response.json();
                                Swal.fire({
                                    icon: "error",
                                    title: "Failed to update product quantity",
                                    text: errorData.error || "Unknown error",
                                });
                            }
                        }

                        function increaseQuantity(productId, index) {
                            updateCartQuantity(productId, index, true);
                        }

                        function decreaseQuantity(productId, index) {
                            updateCartQuantity(productId, index, false);
                        }

                        function updateSummary(data) {
                            // Update summary details on the page
                            document.getElementById('sub-total-price').textContent = data.subTotal.toLocaleString();
                            document.getElementById('savings-price').textContent = data.savings.toLocaleString();
                            document.getElementById('total-price-box').textContent = data.total.toLocaleString();
                        }

                    </script>