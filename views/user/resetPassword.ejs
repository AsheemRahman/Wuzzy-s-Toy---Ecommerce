<style>
.user-resetpassword {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 70vh;
}

.reset-container {
    background: url('/public/assets/Forget-password.avif');
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
    padding: 40px;
    width: 60%;
    height: 70%;
    border-radius: 10px;
    text-align: center;
}

.reset-container h2 {
    margin-bottom: 30px;
}

.reset-container form {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.reset-container form input {
    width: 50%;
    padding: 10px;
    margin: 10px 0;
    border: none;
    border-radius: 5px;
}

.reset-container form button {
    padding: 10px;
    background-color: #535878;
    color: #fff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
}
.reset-container form button:hover{
    background: #db4437;
}

</style>


<%- include('navbar') %>
<main class="user-resetpassword">
    <div class="reset-container">
        <h2>Enter New Password</h2>
        <form action="/user/resetpassword" method="post" id="reset-form" >
            <input type="password" name="password"  placeholder="New Password" required>
            <input type="password" name="confirmPassword"  placeholder="Confirm Password" required>
            <button type="submit" id="submit-button">Reset Password</button>
        </form>
    </div>
</main>


<%- include('footer') %>


<!--------------------------------- Password Validation ------------------------------------------>

<script>
    const newPasswordForm = document.getElementById('reset-form');
    const password = document.getElementsByName('password')[0];
    const confirmPassword = document.getElementsByName('confirmPassword')[0];
    const submitButton = document.getElementById('submit-button');

    newPasswordForm.addEventListener('submit', function(e) {
        e.preventDefault();
        const passwordValue = password.value.trim();
        const confirmPasswordValue = confirmPassword.value.trim();

        if (validatePassword(passwordValue) && passwordValue === confirmPasswordValue) {
            newPasswordForm.submit(); // This line submits the form if validation passes
        } else {
            showValidationAlert(passwordValue, confirmPasswordValue);
        }
    });

    function validatePassword(password) {
        if (password.length < 8) {
            return false;
        }
        if (!/[A-Z]/.test(password)) {
            return false;
        }
        if (!/[a-z]/.test(password)) {
            return false;
        }
        if (!/\d/.test(password)) {
            return false;
        }
        if (!/[!@#$%^&*()_+\-=[\]{};':"\\|,.<>/?]/.test(password)) {
            return false;
        }
        return true;
    }

    function showValidationAlert(password, confirmPassword) {
        let message = '';
        if (password !== confirmPassword) {
            message = 'Passwords do not match!';
        } else if (password.length < 8) {
            message = 'Password must be at least 8 characters long!';
        } else if (!/[A-Z]/.test(password)) {
            message = 'Password must contain at least one uppercase letter!';
        } else if (!/[a-z]/.test(password)) {
            message = 'Password must contain at least one lowercase letter!';
        } else if (!/\d/.test(password)) {
            message = 'Password must contain at least one number!';
        } else if (!/[!@#$%^&*()_+\-=[\]{};':"\\|,.<>/?]/.test(password)) {
            message = 'Password must contain at least one special character!';
        }

        if (message) {
            Swal.fire({
                icon: 'error',
                title: 'Password Validation Error',
                text: message,
            });
        }
    }
</script>

