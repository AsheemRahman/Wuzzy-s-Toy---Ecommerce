<%- include('alert') %>

    <!------------------------ toggle side bar -------------------------------->

    <script>

        function toggleSidebar() {
            var sidebar = document.getElementById("sidebar");
            if (sidebar.style.right === '' || sidebar.style.right === '-300px') {
                sidebar.style.right = "0";
            } else {
                sidebar.style.right = "-300px";
            }
        }

        //--------------- when user login only then we can go to cart ---------------------

        function CartClick(event) {
            event.preventDefault();
            Swal.fire({
                icon: 'warning',
                title: 'Please Login',
                text: 'You need to login to access your cart.',
                showCancelButton: true,
                confirmButtonText: 'Login',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '/login';
                }
            });
        }

        //--------------- when user login only then we can go to Wishlist ---------------------

        function wishlistClick(event) {
            event.preventDefault();
            Swal.fire({
                icon: 'warning',
                title: 'Please Login',
                text: 'You need to login to access your Wishlist.',
                showCancelButton: true,
                confirmButtonText: 'Login',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '/login';
                }
            });
        }

        //--------------------- item count of wishlist and cart ---------------------------

        async function fetchCounts() {
            try {
                const response = await fetch('/getCounts');
                const data = await response.json();
                document.getElementById('wishlist-count').textContent = data.wishlistItemsCount;
                document.getElementById('cart-count').textContent = data.cartItemsCount;
            } catch (error) {
                console.error('Error fetching counts:', error);
            }
        }
        setInterval(fetchCounts, 2000);
        document.addEventListener('DOMContentLoaded', fetchCounts);

    </script>