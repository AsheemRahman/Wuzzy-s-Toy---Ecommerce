<style>
    .latest-product{
        color: #fefeeb;
        display: flex;
        justify-content: space-between;
        padding: 2rem 0rem;
    }
    .latest-product h2{
        font-size: 3rem;
    }

    .latest-product button{
        border-radius: 10px;
    }

    .image-card {
        width: 340px;
        height: 270px;
        background-color: #FFFFFF;
        border-radius: 20px;
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
    }

    .image-card img {
        width: 80%;
        height: 90%;
        border-radius: 10px;
    }

    .image-card {
        width: 100%;
    }

    .new-tag {
        position: absolute;
        top: 0;
        right: 0;
        background-color: rgb(1, 182, 1);
        color: white;
        padding: 5px 10px;
        border-radius: 5px;
        font-weight: bold;
        z-index: 1;
        border-top-right-radius: 20px;
        width: 25%;
        text-align: center;
    }
    .home-line-div{
        display: flex;
        justify-content: center;
    }
    .home-line-div hr {
        width: 80%;
        border: 0;
        height: 3px;
        background: #ffffff;
        margin-top: 4rem;
    }
</style>



<!-------------------------------------------- Similar Products ------------------------------------------------->

<div class="container my-2">
    <div class="latest-product">
        <h2>
            Similar Product
        </h2>
    </div>
    <div class="row">
        <% for(let i = 0; i < similarProduct.length && i < 4; i++) { %>
            <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                <div class="card product-card h-100 d-flex flex-column justify-content-start">
                    <a href="/user/product/<%= similarProduct[i].id %>" class="image-card">
                        <img src="../../<%= similarProduct[i].productImage[0] %>" alt=""class="card-img-top img-fluid">
                    </a>
                    <div class="card-body">
                        <h5 class="card-title ">
                            <%= similarProduct[i].productName %>
                        </h5>
                        <h5 class="card-text"><i class="bi bi-currency-rupee"></i>
                            <%= similarProduct[i].productPrice %>
                        </h5>
                        <div class="mt-3 d-flex gap-2 align-items-center">
                            <a href="" class="btn btn-danger">Add to Cart</a>
                            <span class="wishlist-heart" id="wishlist-heart">
                                <i class="bi bi-heart"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
    </div>
</div>