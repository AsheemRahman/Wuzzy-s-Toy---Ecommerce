<style>
            /* body {
            font-family: Arial, sans-serif;
            background-color: #222;
            color: #fff;
        } */
        .product-card {
            background-color: #333;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }
        .product-card img {
            width: 100%;
            height: 150px;
            object-fit: cover;
        }
        .product-card .info {
            padding: 15px;
        }
        .product-card .info h5 {
            margin: 0;
            font-size: 18px;
        }
        .product-card .info .price {
            font-size: 16px;
            margin: 10px 0;
        }
        .product-card .info .old-price {
            text-decoration: line-through;
            color: #888;
        }
        .product-card .info .rating {
            margin: 5px 0;
            color: #ff0;
        }
        .product-card .info .wishlist {
            margin-top: 10px;
            cursor: pointer;
        }
        .submit-btn {
            background-color: #ff6347;
            color: #fff;
            border: none;
            padding: 5px 10px;
            text-decoration: none;
        }   
</style>




<div class="container text-center mt-4">
    <h1>Similar Products</h1>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4 my-4">
        <% for(let i=0; i<similarProduct.length && i< 4; i++  ) { %>
        <div class="col">
            <div class="product-card d-flex flex-column justify-content-start">
                <div>
                    <a href="/user/product/<%= similarProduct[i].id %>" class="image-card">
                        <img src="../../<%= similarProduct[i].productImage[0] %>" alt="">
                    </a>
                </div>
                <div class="info d-flex justify-content-evenly align-items-center">
                    <div>
                        <h5 class="title-container mt-3"><%= similarProduct[i].productName %></h5>
                        <h5><i class="bi bi-currency-rupee"></i><%= similarProduct[i].productPrice %></h5>
                    </div>
                    <div class="mt-3 d-flex gap-2 align-items-center">
                        <a href="" class="btn submit-btn">Add to Cart</a>
                        <span class="wishlist-heart" id="wishlist-heart">
                            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-heart" viewBox="0 0 16 16">
                                <path d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143q.09.083.176.171a3 3 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15"/>
                            </svg>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
    </div>
</div>