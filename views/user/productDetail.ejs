<style>
    .search-nav {
        height: 55%;
    }

    .product-details {
        width: 50%;
    }

    .product-view {
        display: flex;
        padding: 100px;
        gap: 40px;
        color: #fefeeb;
    }

    .product-image-container {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .main-image {
        width: 480px;
        height: 380px;
        border-radius: 15px;
        display: flex;
        justify-content: center;
        align-items: center;
        cursor: pointer;
        overflow: hidden;
    }

    .main-image img {
        width: 100%;
        height: 100%;
        cursor: pointer;
    }

    .product-image-min {
        width: 150px;
        height: 150px;
        background-color: #FFFFFF;
        border-radius: 15px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .product-image-min img {
        width: 100%;
        height: 100%;
        border-radius: 10px;
        cursor: pointer;
    }

    .add-coupon {
        max-width: 200px;
    }

    .product-description {
        font-family: 'Archivo', sans-serif;
    }

    .productdetail-button {
        display: flex;
        justify-content: space-around;
        height: 9%;
    }

    .productdetail-button a {
        cursor: pointer;
    }

    .productdetail-button a:hover {
        text-decoration: none;
    }

    .product-detail-cart {
        background: #FFB155;
        width: 31%;
        display: flex;
        justify-content: center;
        align-items: center;
        color: #fff;
    }

    .product-detail-buy {
        width: 31%;
        display: flex;
        justify-content: center;
        align-items: center;
        color: #fff;
    }

    .product-detail-buy:hover {
        color: #000;
    }

    .productdetail-button hr {
        width: 80%;
        border: 0;
        height: 3px;
        background: #ffffff;
        margin-top: 4rem;
    }

    /*-------------------- delivery box -------------------------*/

    .product-delivery {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 1rem;
    }

    .product-delivery-line {
        width: 100%;
    }

    .product-detail-delivery {
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        border: 1px solid #fefeeb;
        width: 70%;
    }

    .info-box {
        display: flex;
        align-items: center;
    }

    .info-box:last-child {
        margin-bottom: 0;
    }

    .icon {
        font-size: 24px;
        margin-right: 10px;
    }

    a {
        color: rgb(161, 161, 251);
        text-decoration: none;
    }

    a:hover {
        text-decoration: underline;
    }

    @media (max-width: 600px) {
        .info-box {
            flex-direction: column;
            align-items: flex-start;
        }

        .icon {
            margin-bottom: 10px;
        }
    }

    .detail-price {
        display: flex;
        gap: 2rem;
    }

    /* free delivery and return modal */

    .modal {
        display: none;
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgba(0, 0, 0, 0.4);
    }

    .modal-content {
        margin: 10% auto;
        padding: 20px;
        border: 1px solid #888;
        width: 50%;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }

    .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
    }

    .close:hover,
    .close:focus {
        color: black;
        text-decoration: none;
        cursor: pointer;
    }

    button {
        margin: 20px;
    }

    #postalCode {
        width: 70%;
        background: #1a1a1a;
        color: #fefeeb;
        border: 2px solid #1a1a1a;
        border-radius: 5px;
        padding: 10px;
        margin: 20px;
    }

    #postalCode:focus {
        outline: none;
    }

    #deliveryStatus {
        display: flex;
        justify-content: center;
        margin: 25px;
    }
</style>

<%- include('navbar') %>

    <!-------------------------------------------- Product Single View  ------------------------------------------------->

    <div class="product-view">
        <div class="product-image-container">
            <div class="main-image">
                <img id="image-view" src="../../<%= product.productImage[0]%>" alt="">
            </div>
            <div class="d-flex gap-2 mt-4">
                <% product.productImage.forEach((img,index)=>{ %>
                    <a>
                        <div class="product-image-min" onclick="changeImage(`<%=img.replace(/\\/g, '\\\\')%>`)">
                            <img src="../../<%= img %>" alt="">
                        </div>
                    </a>
                    <% }) %>
            </div>
        </div>
        <div class="product-details d-flex  flex-column gap-4">

            <div>
                <h1>
                    <%= product.productName %>
                </h1>
                <% if (product.productDiscount){ %>
                    <div class="detail-price">
                        <h4>
                            <del><i class="bi bi-currency-rupee"></i>
                                <%= product.productPrice %>
                            </del>
                        </h4>
                        <h4 class="text-warning">
                            <%= product.productDiscount %>% Off
                        </h4>
                    </div>
                    <h3><i class="bi bi-currency-rupee"></i>
                        <%= product.productPrice - product.productPrice * (product.productDiscount/100) %>
                    </h3>
                    <% } else { %>
                        <h3><i class="bi bi-currency-rupee"></i>
                            <%= product.productPrice %>
                        </h3>
                        <% } %>
            </div>
            <div class="product-description">
                <h4>
                    <%= product.productDescription %>
                </h4>
            </div>
            <div class="product-description">
                <% if (product.productQuantity===0) { %>
                    <h3 class="text-danger">Out of Stock</h3>
                    <% } else if (product.productQuantity < 10) { %>
                        <h4 class="text-danger">Only <%= product.productQuantity %> left</h4>
                        <% } %>
            </div>
            <div class="product-line">
                <hr>
            </div>
            <div class="productdetail-button">
                <a onclick="addToCart('<%= product.id %>','<%= product.productPrice %>','<%= user %>')"
                    class="product-detail-cart btn btn-warning">Add to Cart
                    <i class="fas fa-shopping-cart" style="margin-left: 1rem;"></i>
                </a>
                <a href="" class="product-detail-buy btn btn-danger">Buy Now
                    <i class="bi bi-bag-fill" style="margin-left: 1rem;">
                    </i>
                </a>
            </div>
            <div class="product-delivery">
                <div class="product-detail-delivery">
                    <div class="info-box">
                        <div class="icon"><i class="bi bi-truck"></i></div>
                        <div>
                            <div>Free Delivery</div>
                            <a href="#" id="freeDeliveryBtn">Enter your postal code for Delivery Availability</a>
                        </div>
                    </div>
                    <div class="product-delivery-line" style="width: 95%;">
                        <hr>
                    </div>
                    <div class="info-box">
                        <div class="icon"><i class="bi bi-arrow-repeat"></i></div>
                        <div>
                            <div>Return Delivery</div>
                            <a href="#" id="returnDeliveryBtn">Free 30 Days Delivery Returns. Details</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Free Delivery Modal -->
    <div id="freeDeliveryModal" class="modal">
        <div class="modal-content">
            <span class="close" id="closeFreeDelivery">&times;</span>
            <h1>Free Delivery</h1>
            <p>Enter your postal code for Delivery Availability:</p>
            <div class="d-flex justify-content-center">
                <input type="text" id="postalCode" placeholder="Enter postal code" maxlength="6" required>
            </div>
            <div class="d-flex justify-content-center">
                <button onclick="checkDelivery()" class="btn btn-danger">Check Availability</button>
            </div>
            <p id="deliveryStatus"></p>
        </div>
    </div>

    <!-- Return Delivery Modal -->
    <div id="returnDeliveryModal" class="modal">
        <div class="modal-content">
            <span class="close" id="closeReturnDelivery">&times;</span>
            <h1>Return Delivery</h1>
            <p>Free 30 Days Delivery Returns.</p>
            <p>Details:</p>
            <ul>
                <li>Items must be returned within 30 days of receipt.</li>
                <li>Items must be in original condition, unused, and with all original packaging.</li>
                <li>Proof of purchase is required for all returns.</li>
                <li>Refunds will be processed to the original payment method within 7-10 business days after receiving
                    the return.</li>
                <li>Return shipping costs are covered by us.</li>
            </ul>
        </div>
    </div>

