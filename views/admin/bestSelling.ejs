<style>
    .best-seller {
        background: #232323;
        color: #fefeeb;
    }

    .product-image {
        width: 100px;
        height: 100px;
        border-radius: 10px;
    }
</style>

<div class="container">
    <div class="best-seller mt-4 mb-5 p-4  rounded shadow-sm">
        <h1 class="mb-4">Best Sellers</h1>

        <!-- Best Seller Products-->
        <section class="best-sellers-section mb-5">
            <h4 class="section-title text-center mb-3">Best Seller Products</h4>
            <div class="row">
                <% if(bestProducts){ %>
                    <% bestProducts.forEach((product,index)=>{ %>
                        <% if ( product ) { %>
                            <div class="col-lg-3 mb-4">
                                <!-- <h5>
                                    <%= index+1 %>
                                </h5> -->
                                <div class="card h-100 justify-content-center align-items-center">
                                    <div class="mt-3">
                                            <img src="../../../../<%= product.productImage[0] %>" class="product-image"
                                                alt="<%= product.productName %>">
                                    </div>
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <%= product.productName %>
                                        </h5>
                                        <h5 class="card-title">
                                            &#8377; <%= product.productPrice %>
                                        </h5>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                                <% }) %>
                                    <% } else{ %>
                                        <h1>
                                            No Product Found
                                        </h1>
                                        <% } %>
            </div>
        </section>

        <!-- Best Seller Category Section -->
        <section class="best-sellers-section">
            <h4 class="section-title text-center mb-3">Best Seller Category</h4>
            <ul class="list-group">
                <% if(bestCategory){ %>
                    <% for(let Category of bestCategory.keys()) {%>
                        <li class="list-group-item">
                            <%= Category %>
                        </li>
                        <% } %>
                            <% } %>
            </ul>
        </section>
    </div>
</div>