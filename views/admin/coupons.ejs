        async function deleteCoupon(id) {
            const response = await fetch(`/admin/deletecoupon/${id}`, {
                method: 'DELETE',
                headers: { 'Content-Type': 'application/json' }
            });
            const result = await response.json();
            Swal.fire({
                title: 'Delete Coupon',
                text: result.message,
                icon: 'success',
                confirmButtonText: 'OK'
            }).then(() => {
                window.location.reload();
            });
        }
    </script>